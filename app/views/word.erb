<h1>Find Anagrams!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @new_word %>
      <p>Estos son anagramas para '<%= @new_word.upcase %>':</p>
      <% if @anagrams.empty? %>
        <p>No se encontraron anagramas para esta palabra</p>
      <% else %>
        <% @anagrams.each do |word| %>
          <span class="label label-primary"><%= word.name %></span>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<br><br>

